<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymAssignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Heebo&display=swap" rel="stylesheet">
    <style>
        /* <!-- Added more css for body - Mason --> */
        body, html {
            height: 100%;
            width: 100%;
            font-family: 'Heebo', sans-serif;
        }
        /* <!-- Additional styling added --> */
        .navbar {
            background-color: #FF8700 !important;
            padding: 1rem;
        }


        .navbar-nav li a {
            color: black !important;
            font-weight: bold;
            text-transform: uppercase;
        }

        .carousel-inner {
            padding-bottom: 2rem;
        }

        .carousel-caption p {
            font-size: 30px;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .btn-default {
            background-color: #FF8700 !important;
            border: 1px solid #FF8700 !important;
        }

        .col-md-3 h2 {
            color: #FF8700 !important;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
        }

        .img1 {
            width: 100%;
            height: 50%;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><strong>MakeOrBreak</strong></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><strong> Home</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About"><strong> About </strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UsersTable" asp-action=""><strong> Users</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CourseLists" asp-action=""><strong> Sign Up For Courses</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="FacultyLists" asp-action=""><strong> View Staff Directory</strong><br /><font color="white">(Staff Only)</font></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TimeOff" asp-action=""><strong>Book Time Off</strong><br /><font color="white">(Staff Only)</font></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - MakeOrBreak Fitness- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

