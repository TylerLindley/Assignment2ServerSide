            <div id="map" style="height:500px; width: 1200px;"> </div> <!--Bringing in the Google Maps API for our website to show users where the gyms are. -->
            <script>
                //Bringing in the Google Maps API to display our 3 locations in Barrie.
                //Code is being used and modified from 
                //https://www.reddit.com/r/csharp/comments/d1x6ce/adding_google_maps_to_aspnet_core/ - Tyler Lindley
                var map;
                function initMap() {
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: { lat: 44.389355, lng: -79.690331 },
                        zoom: 12
                    });
                    var marker1 = new google.maps.Marker({
                        position: { lat: 44.3399793, lng: -79.7169151 },
                        map: map,
                        title: "Holly Meadows Gym"
                    });
                    var marker2 = new google.maps.Marker({
                        position: { lat: 44.413721, lng: -79.704550 },
                        map: map,
                        title: "East Bayfield Gym"
                    });
                    var marker3 = new google.maps.Marker({
                        position: { lat: 44.361329, lng: -79.684886 },
                        map: map,
                        title: "Allandale Community Gym"
                    });
                }
            </script>
            <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDKxAjsEA9v8fL2RlIqxayM-y9BpAq1eYo&callback=initMap"
                    type="text/javascript"></script>
